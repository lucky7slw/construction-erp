{
  "name": "hhhomespm",
  "version": "0.1.0",
  "description": "Construction AI-ERP System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "docker:dev": "docker-compose -f docker/development/docker-compose.yml up -d",
    "docker:dev:down": "docker-compose -f docker/development/docker-compose.yml down",
    "docker:dev:logs": "docker-compose -f docker/development/docker-compose.yml logs -f",
    "docker:prod": "docker-compose -f docker/production/docker-compose.yml up -d",
    "docker:prod:down": "docker-compose -f docker/production/docker-compose.yml down"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemailer": "^7.0.6",
    "prettier": "^3.2.0",
    "puppeteer": "^24.22.3",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}