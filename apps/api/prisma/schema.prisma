  contactName         String?
  contactPhone        String?
  contactEmail        String?
  officeAddress       String?
  officeHours         String?

  // AI Analysis
  aiExtracted         Boolean          @default(false)
  aiConfidence        Decimal?         @db.Decimal(3, 2)
  sourceUrl           String?          // Where AI found the info
  lastVerified        DateTime?        // Last verification date

  notes               String?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  deckProject         DeckProject      @relation(fields: [deckProjectId], references: [id], onDelete: Cascade)

  @@index([deckProjectId])
  @@index([status])
  @@index([jurisdictionName])
  @@map("deck_permits")
}

model DeckPropertyData {
