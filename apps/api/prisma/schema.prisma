// ============================================================================
// DECK BUILDING AI MODULE
// ============================================================================

enum DeckType {
  GROUND_LEVEL      // <30" high, may not require permit in some jurisdictions
  ELEVATED          // >30" high, typically requires permit
  MULTI_LEVEL       // Multiple elevation changes
  ROOFTOP           // Deck on roof structure
  FLOATING          // Freestanding deck
  ATTACHED          // Attached to house structure
  WRAPAROUND        // Wraps around multiple sides
  POOL              // Pool deck
  HOT_TUB           // Hot tub deck
  CUSTOM            // Custom design
}

enum DeckShape {
  RECTANGLE
  SQUARE
  L_SHAPE
  U_SHAPE
  OCTAGON
  HEXAGON
  CIRCULAR
  CUSTOM
}

enum DeckMaterialType {
  PRESSURE_TREATED_LUMBER
  CEDAR
  REDWOOD
  COMPOSITE
  PVC
  ALUMINUM
  STEEL
  IPE
  MAHOGANY
  BAMBOO
  CONCRETE
}

enum RailingType {
  WOOD_BALUSTERS
  METAL_BALUSTERS
  CABLE
  GLASS
  COMPOSITE
  VINYL
  ALUMINUM
  NONE
}

enum FoundationType {
  CONCRETE_FOOTING
  PRECAST_PIER
  HELICAL_PIER
  GROUND_SCREW
  DECK_BLOCKS
  SLAB_ON_GRADE
}

enum DeckProjectStatus {
  PLANNING          // AI planning phase
  DESIGN_REVIEW     // Customer reviewing AI design
  PERMIT_RESEARCH   // Researching permit requirements
  PERMIT_PENDING    // Permits submitted, awaiting approval
  PERMIT_APPROVED   // Ready to build
  IN_CONSTRUCTION   // Under construction
  COMPLETED         // Deck completed
  CANCELLED         // Project cancelled
}

enum PermitStatus {
  NOT_REQUIRED
  RESEARCHING       // AI is researching requirements
  REQUIRED          // Permit identified as required
  APPLICATION_READY // Application prepared by AI
  SUBMITTED         // Submitted to jurisdiction
  UNDER_REVIEW      // Under review by jurisdiction
  APPROVED          // Permit approved
  REJECTED          // Permit rejected
  EXPIRED           // Permit expired
}

enum CodeRequirementType {
  STRUCTURAL
  SAFETY
  ACCESSIBILITY
  ENERGY
  ENVIRONMENTAL
  ZONING
  SETBACK
  HEIGHT_RESTRICTION
  LOT_COVERAGE
  OTHER
}

model DeckProject {
  id                  String             @id @default(cuid())
  projectId           String?            // Link to main Project if part of larger construction
  companyId           String
  customerId          String?
  name                String
  description         String?
  status              DeckProjectStatus  @default(PLANNING)
  deckType            DeckType
  deckShape           DeckShape
  primaryMaterial     DeckMaterialType
  railingType         RailingType
  foundationType      FoundationType

  // Dimensions
  length              Decimal            @db.Decimal(10, 2) // feet
  width               Decimal            @db.Decimal(10, 2) // feet
  height              Decimal?           @db.Decimal(10, 2) // feet from ground
  totalSquareFeet     Decimal            @db.Decimal(10, 2)

  // Location & Property Data
  propertyAddress     String
  city                String
  state               String
  postalCode          String
  county              String
  parcelId            String?
  latitude            Decimal?           @db.Decimal(10, 8)
  longitude           Decimal?           @db.Decimal(11, 8)

  // AI Analysis
  aiGenerated         Boolean            @default(true)
  aiConfidence        Decimal?           @db.Decimal(3, 2) // 0.00-1.00
  aiRecommendations   Json?              // AI suggestions and reasoning
  aiRiskAssessment    Json?              // Identified risks and mitigation

  // Cost Estimates
  estimatedMaterialCost Decimal?         @db.Decimal(12, 2)
  estimatedLaborCost    Decimal?         @db.Decimal(12, 2)
  estimatedPermitCost   Decimal?         @db.Decimal(10, 2)
  estimatedTotalCost    Decimal?         @db.Decimal(12, 2)
  actualMaterialCost    Decimal          @default(0) @db.Decimal(12, 2)
  actualLaborCost       Decimal          @default(0) @db.Decimal(12, 2)
  actualPermitCost      Decimal          @default(0) @db.Decimal(10, 2)
  actualTotalCost       Decimal          @default(0) @db.Decimal(12, 2)

  // Timeline
  estimatedLaborHours   Decimal?         @db.Decimal(8, 2)
  estimatedDuration     Int?             // days
  plannedStartDate      DateTime?
  plannedCompletionDate DateTime?
  actualStartDate       DateTime?
  actualCompletionDate  DateTime?

  // Customer Preferences
  budgetRange           String?          // e.g., "$5000-$10000"
  mustHaveFeatures      Json?            // Array of required features
  niceToHaveFeatures    Json?            // Array of optional features
  stylePreferences      Json?            // Customer style preferences

  createdById         String
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  // Relations
  company             Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  project             Project?           @relation(fields: [projectId], references: [id], onDelete: SetNull)
  customer            Customer?          @relation(fields: [customerId], references: [id], onDelete: SetNull)
  designs             DeckDesign[]
  materials           DeckMaterial[]
  permits             DeckPermit[]
  propertyData        DeckPropertyData?
  codeRequirements    DeckCodeRequirement[]
  laborEstimates      DeckLaborEstimate[]
  costBreakdown       DeckCostBreakdown[]

  @@index([companyId])
  @@index([projectId])
  @@index([customerId])
  @@index([status])
  @@index([state, city, postalCode]) // For permit lookup
  @@index([county]) // For GIS lookup
  @@map("deck_projects")
}

model DeckDesign {
  id                String           @id @default(cuid())
  deckProjectId     String
  version           Int              @default(1)
  name              String
  description       String?
  isActive          Boolean          @default(true) // Current active design

  // Detailed Dimensions
  deckingArea       Decimal          @db.Decimal(10, 2) // sq ft
  railingLength     Decimal?         @db.Decimal(10, 2) // linear feet
  stairCount        Int              @default(0)
  stairWidth        Decimal?         @db.Decimal(6, 2)
  stairRise         Decimal?         @db.Decimal(6, 2)
  stairRun          Decimal?         @db.Decimal(6, 2)

  // Structural Details
  joistSpacing      Decimal          @default(16) @db.Decimal(4, 1) // inches
  beamSize          String?          // e.g., "2x10", "4x8"
  postSize          String?          // e.g., "4x4", "6x6"
  postCount         Int?
  footingDepth      Decimal?         @db.Decimal(6, 2) // feet (min 30" per IRC)
  footingDiameter   Decimal?         @db.Decimal(6, 2) // inches
  footingCount      Int?

  // Load Requirements (from building codes)
  liveLoad          Decimal          @default(40) @db.Decimal(6, 2) // PSF
  deadLoad          Decimal          @default(10) @db.Decimal(6, 2) // PSF
  snowLoad          Decimal?         @db.Decimal(6, 2) // PSF if applicable

  // Features
  hasBuiltInSeating Boolean          @default(false)
  hasPrivacyScreen  Boolean          @default(false)
  hasLighting       Boolean          @default(false)
  hasPergola        Boolean          @default(false)
  hasGate           Boolean          @default(false)
  customFeatures    Json?            // Array of custom features

  // 3D/CAD Data
  cadData           Json?            // CAD coordinates and geometry
  threeDModel       String?          // URL to 3D model file
  drawingPdf        String?          // URL to PDF drawing

  // AI Analysis
  aiGenerated       Boolean          @default(true)
  aiConfidence      Decimal?         @db.Decimal(3, 2)
  aiReasoning       String?          // Why AI chose this design

  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  deckProject       DeckProject      @relation(fields: [deckProjectId], references: [id], onDelete: Cascade)

  @@unique([deckProjectId, version])
  @@index([deckProjectId])
  @@index([isActive])
  @@map("deck_designs")
}

model DeckMaterial {
  id                String           @id @default(cuid())
  deckProjectId     String
  category          String           // Decking, Framing, Railing, Fasteners, Concrete, etc.
  name              String
  description       String?
  manufacturer      String?
  model             String?
  sku               String?

  // Quantity
  quantity          Decimal          @db.Decimal(10, 3)
  unit              String           // board feet, linear feet, pieces, bags, cubic yards

  // Pricing
  unitCost          Decimal?         @db.Decimal(10, 2)
  totalCost         Decimal?         @db.Decimal(12, 2)
  priceSource       String?          // "1build", "manual", "historical"
  priceDate         DateTime?        // When price was retrieved

  // Specifications
  dimensions        String?          // e.g., "2x6x12", "5/4x6"
  grade             String?          // #1, #2, Select, etc.
  treatment         String?          // Pressure treated, kiln dried, etc.
  color             String?
  finish            String?

  // Waste Factor
  wasteFactor       Decimal          @default(10) @db.Decimal(5, 2) // percentage
  quantityWithWaste Decimal?         @db.Decimal(10, 3)

  // AI Insights
  aiSuggested       Boolean          @default(false)
  aiAlternatives    Json?            // Alternative materials suggested
  aiCostComparison  Json?            // Cost vs alternatives

  // Supplier Info
  supplierName      String?
  supplierSku       String?
  leadTime          Int?             // days
  inStock           Boolean          @default(true)

  sortOrder         Int              @default(0)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  deckProject       DeckProject      @relation(fields: [deckProjectId], references: [id], onDelete: Cascade)

  @@index([deckProjectId])
  @@index([category])
  @@map("deck_materials")
}

model DeckPermit {
  id                  String           @id @default(cuid())
  deckProjectId       String
  permitType          String           // Building, Zoning, Environmental, HOA, etc.
  jurisdictionName    String           // City/County name
  jurisdictionType    String           // City, County, State
  status              PermitStatus     @default(RESEARCHING)

  // Permit Details
  permitNumber        String?
  description         String?
  isRequired          Boolean          @default(false)
  exemptionReason     String?          // If not required, why

  // Requirements (AI extracted)
  requirements        Json?            // Array of requirement objects
  requiredDocuments   Json?            // Array of document types needed
  fees                Json?            // Fee structure
  estimatedCost       Decimal?         @db.Decimal(10, 2)
  actualCost          Decimal?         @db.Decimal(10, 2)

  // Application Process
  applicationUrl      String?
  applicationPdfUrl   String?          // Generated application PDF
  submittedDate       DateTime?
  approvedDate        DateTime?
  expirationDate      DateTime?

  // Inspections
  inspectionsRequired Json?            // Array of inspection types
  inspectionSchedule  Json?            // Scheduled inspections

