# Database Configuration
POSTGRES_DB=erp_production
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DATABASE_URL=postgresql://erp_user:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/erp_production

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Application Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION
ENCRYPTION_KEY=CHANGE_THIS_32_CHAR_ENCRYPTION_KEY

# API Configuration
API_BASE_URL=https://api.yourdomain.com
WEB_BASE_URL=https://yourdomain.com

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD
EMAIL_FROM=noreply@yourdomain.com

# File Storage (S3 Compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=YOUR_ACCESS_KEY
S3_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
S3_BUCKET=erp-files-production

# Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100